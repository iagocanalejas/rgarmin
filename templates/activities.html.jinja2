<div class="max-w-6xl mx-auto">
	<div class="flex justify-between items-center mb-6">
		<button class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg shadow-md" onclick="changeWeek(-1)">Previous</button>
		<h2 class="text-2xl font-semibold">{{ start_date }} - {{ end_date }}</h2>
		<button class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg shadow-md" onclick="changeWeek(1)">Next</button>
	</div>

	{% for connection in connections %}
	<div class="mb-8">
		<h3 class="text-xl font-bold mb-4">{{ connection.display_name }}</h3>
		<div class="grid grid-cols-7 gap-4">
			{% for day in ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"] %}
			<div class="bg-gray-800 p-4 rounded-lg shadow-lg">
				<h4 class="text-lg font-semibold mb-3">{{ day }}</h4>
				<div class="space-y-2">
					{% set day_activities = connection.activities | selectattr("weekday", "equalto", day) | list %}
					{% for activity in day_activities %}
					<div class="p-3 bg-gray-700 rounded-lg shadow">
						<p class="font-medium">{{ activity.activity_name }}</p>
						<p class="text-sm text-gray-400">{{ activity.start_time_local }}</p>
						<p class="text-sm text-gray-400">{{ activity.activity_type }}</p>
					</div>
					{% endfor %}
				</div>
			</div>
			{% endfor %}
		</div>
	</div>
	{% endfor %}
</div>

<script src="{{ url_for('static', path='/js/activities.js') }}"></script>
